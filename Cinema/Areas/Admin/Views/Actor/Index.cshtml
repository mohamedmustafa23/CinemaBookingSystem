@model IEnumerable<Actor>

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">🎭 Actors</h2>
        <a href="/Admin/Actor/Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> Add New Actor
        </a>
    </div>

    <!-- Table -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Photo</th>
                            <th>Actor Name</th>
                            <th>Age</th>
                            <th>Movies Count</th>
                            <th style="width: 160px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Sample Data (Static) -->
                        @foreach(var actor in Model)
                        {
                            <tr>
                                <td>@actor.Id</td>
                                <td>
                                    <img src="@actor.Image" alt="Actor" class="rounded-circle" style="width:50px; height:50px; object-fit:cover;">
                                </td>
                                <td>@actor.Name</td>
                                <td>@actor.Age</td>
                                <td> </td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">
                                        <a asp-area="Admin" asp-controller="Actor" asp-action="Edit" asp-route-id="@actor.Id"
                                           class="btn btn-sm btn-outline-warning d-flex align-items-center gap-1">
                                            <i class="bi bi-pencil-square"></i>
                                            <span>Edit</span>
                                        </a>
                                        @if(User.IsInRole(SD.Role_SuperAdmin) || User.IsInRole(SD.Role_Admin))
                                        {
                                            <form asp-area="Admin" asp-controller="Actor" asp-action="Delete" asp-route-id="@actor.Id" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-danger d-flex align-items-center gap-1" 
                                                        onclick="return confirm('Are you sure you want to delete this actor?');">
                                                    <i class="bi bi-trash"></i>
                                                    <span>Delete</span>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_NotificationPartial" />
}