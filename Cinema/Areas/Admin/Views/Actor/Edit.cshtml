@model Actor
<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">✏️ Edit Actor</h2>
        <a href="/Admin/Actor" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Form -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form method="post" asp-action="Edit" asp-controller="Actor" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Actor Name</label>
                        <input type="text" class="form-control" asp-for="Name" required />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Age</label>
                        <input type="number" class="form-control" asp-for="Age" required />
                        <span class="text-danger" asp-validation-for="Age"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Type</label>
                        <select class="form-select" asp-for="Gender" required>
                            <option value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Biography</label>
                    <textarea class="form-control" rows="4" asp-for="Biography"></textarea>
                    <span class="text-danger" asp-validation-for="Biography"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold">Profile Photo</label>
                    <div class="d-flex align-items-center gap-3">
                        <img src="@Model.Image" alt="Actor Photo" class="rounded" style="width:80px;height:80px;object-fit:cover;">
                        <input type="file" class="form-control" accept="image/*" value="@Model.Image" name="img" />
                        <span class="text-danger" asp-validation-for="Image"></span>
                    </div>
                </div>

                <div class="text-end">                   
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


