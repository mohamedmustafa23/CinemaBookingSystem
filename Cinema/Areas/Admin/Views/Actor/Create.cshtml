@model Actor

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">➕ Add New Actor</h2>
        <a href="/Admin/Actor" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Form -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form method="post" asp-controller="Actor" asp-action="Create" enctype="multipart/form-data">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Actor Name</label>
                        <input type="text" class="form-control" placeholder="Enter actor name" asp-for="Name" required />
                        <span class="text-danger" asp-validation-for="Name" ></span>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Age</label>
                        <input type="number" class="form-control" min="1" max="100" placeholder="Enter age" asp-for="Age" required />
                        <span class="text-danger" asp-validation-for="Age"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Type</label>
                        <select class="form-select" asp-for="Gender" required>
                            <option value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>                           
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Biography</label>
                    <textarea class="form-control" rows="4" placeholder="Short bio or description about the actor" asp-for="Biography"></textarea>
                    <span class="text-danger" asp-validation-for="Biography"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold">Profile Photo</label>
                    <input type="file" class="form-control" accept="image/*" name="img" />
                    <span class="text-danger" asp-validation-for="Image"></span>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check2-circle me-1"></i> Save Actor
                    </button>
                    <button type="reset" class="btn btn-outline-secondary ms-2">
                        <i class="bi bi-x-circle me-1"></i> Clear
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}