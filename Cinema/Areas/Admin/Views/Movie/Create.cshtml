@model Cinema.ViewModels.MovieVM

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">➕ Add New Movie</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    <form asp-action="Create" asp-controller="Movie" enctype="multipart/form-data" method="post">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="row g-3">

                    <!-- Movie Title -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Title</label>
                        <input asp-for="Movie.Title" class="form-control" placeholder="Enter movie title..." />
                        <span asp-validation-for="Movie.Title" class="text-danger"></span>
                    </div>

                    <!-- Category -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Category</label>
                        <select asp-for="Movie.CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))" class="form-select">
                            <option value="">-- Select Category --</option>
                        </select>
                        <span asp-validation-for="Movie.CategoryId" class="text-danger"></span>
                    </div>

                    <!-- Language -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Language</label>
                        <select asp-for="Movie.Language" class="form-select">
                            <option value="">-- Select Language --</option>
                            <option value="English">English</option>
                            <option value="Arabic">Arabic</option>
                            <option value="French">French</option>
                            <option value="Spanish">Spanish</option>
                            <option value="Hindi">Hindi</option>
                            <option value="Japanese">Japanese</option>
                        </select>
                        <span asp-validation-for="Movie.Language" class="text-danger"></span>
                    </div>

                    <!-- Subtitle -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Subtitle (Optional)</label>
                        <select asp-for="Movie.Subtitle" class="form-select">
                            <option value="">-- Select Subtitle Language --</option>
                            <option value="English">English</option>
                            <option value="Arabic">Arabic</option>
                            <option value="French">French</option>
                            <option value="Spanish">Spanish</option>
                            <option value="Hindi">Hindi</option>
                            <option value="Japanese">Japanese</option>
                        </select>
                        <span asp-validation-for="Movie.Subtitle" class="text-danger"></span>
                    </div>

                    <!-- Duration -->
                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Duration (minutes)</label>
                        <input asp-for="Movie.Duration" type="number" min="1" step="1" class="form-control" />
                        <span asp-validation-for="Movie.Duration" class="text-danger"></span>
                    </div>


                    <!-- Release Date -->
                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Release Date</label>
                        <input asp-for="Movie.ReleaseDate" type="date" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="Movie.ReleaseDate" class="text-danger"></span>
                    </div>

                    <!-- Age Restriction -->
                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Age Restriction</label>
                        <input asp-for="Movie.AgeRestriction" type="number" class="form-control" />
                        <span asp-validation-for="Movie.AgeRestriction" class="text-danger"></span>
                    </div>

                    <!--Description-->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Description</label>
                        <textarea class="form-control" rows="4" placeholder="Short bio or description about the Movie" asp-for="Movie.Description"></textarea>
                        <span class="text-danger" asp-validation-for="Movie.Description"></span>
                    </div>

                    <!-- Poster -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Poster Image</label>
                        <input type="file" name="Poster" class="form-control" accept="image/*" />
                        <span asp-validation-for="Movie.Poster" class="text-danger"></span>
                    </div>

                    <!-- Trailer -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Trailer Video</label>
                        <input type="file" name="Trailer" class="form-control" accept="video/mp4,video/webm" />
                        <span asp-validation-for="Movie.Trailer" class="text-danger"></span>
                    </div>

                    <div class="col-12 text-end mt-3">
                        <button class="btn btn-success px-4">
                            <i class="bi bi-check-circle me-1"></i> Save Movie
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>