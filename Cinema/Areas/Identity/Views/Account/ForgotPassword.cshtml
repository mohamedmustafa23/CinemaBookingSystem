@model Cinema.ViewModels.ForgotPasswordVM
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container_email_confirmation">
    <div class="email-confirmation-card">
        <div class="card-icon">
            <i class="fas fa-key"></i>
        </div>

        <h1>Forgot Password?</h1>
        <p class="subtitle">No worries! Enter your email or username and we'll send you an OTP code to reset your password.</p>

        <form asp-action="ForgotPassword" asp-controller="Account" asp-area="Identity" method="post">
            <div class="form-content">
                <div class="input-group">
                    <label asp-for="UserNameOrEmail">
                        <i class="fas fa-envelope"></i>
                        Email or Username
                    </label>
                    <input type="text"
                           asp-for="UserNameOrEmail"
                           placeholder="Enter your email or username"
                           autocomplete="username"
                           required />
                    <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-primary">
                    <i class="fas fa-paper-plane"></i>
                    Send OTP Code
                </button>

                <div class="divider">
                    <span>or</span>
                </div>

                <a asp-action="Login" asp-controller="Account" asp-area="Identity" class="back-link">
                    <i class="fas fa-arrow-left"></i>
                    Back to Sign In
                </a>
            </div>
        </form>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i>
                @TempData["ErrorMessage"]
            </div>
        }
    </div>

    <div class="info-panel">
        <div class="info-content">
            <h2>Secure Password Reset</h2>
            <ul class="benefits-list">
                <li>
                    <i class="fas fa-shield-alt"></i>
                    <div>
                        <strong>OTP Protection</strong>
                        <p>We'll send a secure 6-digit OTP to your registered email.</p>
                    </div>
                </li>
                <li>
                    <i class="fas fa-clock"></i>
                    <div>
                        <strong>Time-Limited</strong>
                        <p>The code is valid for 10 minutes for your security.</p>
                    </div>
                </li>
                <li>
                    <i class="fas fa-lock"></i>
                    <div>
                        <strong>Encrypted Storage</strong>
                        <p>Your new password will be securely encrypted.</p>
                    </div>
                </li>
                <li>
                    <i class="fas fa-ban"></i>
                    <div>
                        <strong>Request Limit</strong>
                        <p>Maximum 3 OTP requests allowed per 24 hours.</p>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
